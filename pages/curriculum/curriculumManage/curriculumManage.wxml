<!--pages/alterCurriculum/alterCurriculum.wxml-->
<!-- 课程作业详情 -->
<view class='container'>
   <view class='opt_list'>
      <i-button class='change_btn' bind:click="handleClick" type="warning" size="small" catchtap='changeCurriculum'>修改</i-button>
      <i-button class='change_btn' bind:click="handleClick" type="info" size="small" catchtap='goAssignmentManage'>课程作业详情</i-button>
      <i-button class='change_btn' bind:click="handleClick" type="info" size="small" catchtap='goAssignmentSubmission'>作业提交详情</i-button>
   </view>
   <i-input value="{{ curriculumName }}" title="课程名称" disabled />
   <i-input value="{{ curriculumIntroduce }}" type='textarea' title="课程介绍" disabled />
</view>