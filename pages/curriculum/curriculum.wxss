.curriculum_view{
   display: flex;
   flex-direction: column;
   margin: 20rpx 60rpx;
}
.curriculum_list{
   display: flex;
   flex-direction: row;
   align-items: center;
   width: 700rpx;
   height: 140rpx;
   margin: 10rpx;
   border-bottom: solid 2px gray;
}
.curriculum_img{
   width: 100rpx;
   height: 100rpx;
   margin-left: 60rpx;
   
}
.curriculum_info{
